# Shared Environment Variables for Content Integration
# Copy this file to .env.content and fill in your values

# OpenAI Configuration (Required for content improvement)
OPENAI_API_KEY=your_openai_api_key_here

# Content System Configuration
CONTENT_SYSTEM_ENABLED=true
CONTENT_AUTO_BACKUP=true
CONTENT_QUALITY_THRESHOLD=75
CONTENT_LOG_LEVEL=info

# Freepik API (Optional - for image generation)
FREEPIK_API_KEY=your_freepik_api_key_here

# Replicate API (Optional - for advanced image generation)
REPLICATE_API_TOKEN=your_replicate_token_here

# Content Workflow Settings
CONTENT_MAX_IMPROVEMENTS_PER_RUN=50
CONTENT_REVIEW_REQUIRED=true
CONTENT_ANALYTICS_ENABLED=true

# Integration Settings
INTEGRATION_WEBHOOK_URL=http://localhost:3000/api/content/webhook
INTEGRATION_SECRET=your_webhook_secret_here